        <input type="text" placeholder="Add Item" name="pantry">
        <button type="submit">Add</button>
    </form>

    <ul class="items">
    <% for(let i = 0; i < groceryListItems.length; i++) { %>
        <% if(groceryListItems[i].pantry) { %>
            <li class="item">
                <span><%= groceryListItems[i].pantry %></span>
                <button id="number-item-button">+</button>
            </li>
      <% } %>  
    <% } %>
    </ul>
   

    <h3>FATS/SPICES/COND</h3>
    <form action="/addGrocery" method="POST">
        <input type="text" placeholder="Add Item" name="condiments">
        <button type="submit">Add</button>
    </form>

    <ul class="items">
        <% for(let i = 0; i < groceryListItems.length; i++) { %>
            <% if(groceryListItems[i].condiments) { %>
                <li class="item">
                    <span><%= groceryListItems[i].condiments %></span>
                    <button id="number-item-button">+</button>
                </li>
          <% } %>  
        <% } %>
    </ul>
 

    <h3>OTHER</h3>
    <form action="/addGrocery" method="POST">
        <input type="text" placeholder="Add Item" name="other">
        <button type="submit">Add</button>
    </form>

    <ul class="items">
        <% for(let i = 0; i < groceryListItems.length; i++) { %>
            <% if(groceryListItems[i].other) { %>
                <li class="item">
                    <span><%= groceryListItems[i].other %></span>
                    <button id="number-item-button">+</button>
                </li>
          <% } %>  
        <% } %>
    </ul>
    
    <script src="/main.js"></script>
</body>
</html>