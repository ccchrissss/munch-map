<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grocery List</title>
</head>
<body>

    <h1>GROCERY LIST</h1>
    <h2><a href="meal-plan">Meal Plan</a></h2>

    <h3>FRUIT/VEGETABLE</h3>
    <form action="/addGrocery" method="POST">
        <input type="text" placeholder="Add Item" name="produce">
        <button type="submit">Add</button>
    </form>

    <ul class="items">
        <% for(let i = 0; i < groceryListItems.length; i++) { %>
            <% if(groceryListItems[i].produce) { %>
            <li class="item">
                <span><%= groceryListItems[i].produce %></span>
                <button id="number-item-button">+</button>
            </li>
            <% } %>
        <% } %>
    </ul>
   
    
    <h3>PROTEIN</h3>
    <form action="/addGrocery" method="POST">
        <input type="text" placeholder="Add Item" name="protein">
        <button type="submit">Add</button>
    </form>
    <ul class="items">
        <% for(let i = 0; i < groceryListItems.length; i++) { %>
           <% if(groceryListItems[i].protein) { %> 
            <li class="item">
                <span><%= groceryListItems[i].protein %></span>
                <button id="number-item-button">+</button>
            </li>
            <% } %>
        <% } %>
    </ul>
   

    <h3>GRAINS/LEGUMES/NUTS/SEEDS</h3>
